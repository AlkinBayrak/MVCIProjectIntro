@model List<Personel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <ul>
        @foreach (var item in Model)
        {
            <li>@item.Name @item.Surname</li>
        }
    </ul>

    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                </tr>
            }

        </tbody>

    </table>

    
}
<a class="btn btn-success" role="button" asp-controller="Personel" asp-action="PersonelAdd">Add Personel</a>


